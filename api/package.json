{
  "name": "api",
  "license": "MIT",
  "dependencies": {
    "@typegoose/typegoose": "^8.3.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "dotenv": "^10.0.0",
    "graphql": "^15.5.3",
    "graphql-yoga": "^1.18.3",
    "mongodb": "^4.1.2",
    "mongoose": "^6.0.5",
    "nanoid": "^3.1.25",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
  },
  "scripts": {
    "start": "nodemon --exec ts-node src/app.ts",
    "build": "tsc",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts}' --quiet --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn format",
      "yarn lint",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/graphql": "^14.5.0",
    "@types/mongoose": "^5.7.7",
    "@types/node": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "concurrently": "^6.2.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.2",
    "prettier": "^2.4.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}
