{
  "name": "api",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dataloader": "^2.0.0",
    "dotenv": "^10.0.0",
    "graphql": "^15.5.3",
    "graphql-yoga": "^1.18.3",
    "nanoid": "^3.1.25",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.37"
  },
  "scripts": {
    "start": "ts-node-dev --respawn src/app.ts",
    "build": "tsc",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts}' --quiet --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn format",
      "yarn lint",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/graphql": "^14.5.0",
    "@types/node": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "concurrently": "^6.2.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.0",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8",
    "typedi": "^0.10.0",
    "typescript": "^4.4.3"
  }
}
